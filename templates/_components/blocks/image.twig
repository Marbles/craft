{# @var craft \craft\web\twig\variables\CraftVariable #}
{% set image = block.asset[0] ?? null %}
{% if image %}
    {% set sizes = block.width == "full" ? "100vw" : "50vw" %}

    <figure class="block relative">
        {% include '_components/image' with {
            asset: image,
            transform: 'base',
            sizes: sizes,
            classes: 'w-full h-auto',
        } %}
        {% if block.caption %}
            <figcaption class="text-grey text-sm mt-1">{{ block.caption }}</figcaption>
        {% endif %}
    </figure>
{% endif %}
