{% block view_header %}{% endblock %}

{% block view_main %}
    <article>
        <header>
            {% block detail_header_content %}
                <div class="max-w-content mx-auto flex">
                    <div class="">
                        <h1>{{ entry.headerTitle ?? entry.title }}</h1>
                        <div>{{ entry.headerDescription|typogrify|raw }}</div>
                    </div>
                </div>
            {% endblock %}
        </header>

        <section>
            {% include '_components/builder' %}
        </section>
    </article>
{% endblock %}

