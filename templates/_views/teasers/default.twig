{% block view_main %}
    {% set image = image ?? entry.teaserImage.one() %}
    <a href="{{ entry.url }}" class="block">
        {% if image %}
            {% include '_components/image' with {
                asset: image,
                transform: 'landscape-4/3',
                sizes: '300px',
            } %}
        {% endif %}

        <h3 class="text-center">{{ entry.title }}</h3>
        {{ entry.teaserDescription|typogrify|raw }}
    </a>
{% endblock %}
