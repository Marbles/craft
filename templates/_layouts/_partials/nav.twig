{%- set nav = craft.navigation.nodes('mainNav').level(1).all() -%}
<div class="col-span-14">
    <div class="grid__site max-w-big mx-auto">
        <div class="col-start-2 col-span-2 py-4">
            <a href="{{ currentSite.baseUrl }}" class="block no-underline">
                <img src="{{ globals.logo.one.url ?? '' }}" alt="Logo" class="h-10 lg:h-10 xl:h-auto">
            </a>
        </div>
        <nav class="col-span-10 self-center justify-self-end">
            <ul class="list-none">
                {% for node in nav %}
                <li class="list-none inline-block">
                    <a 
                    href="{{ node.url }}"
                    title="{{ node.title }}"
                    target="{{ node.target }}"
                    class="inline-block font-bold text-lg mx-4 {% if node.active %} underline {% else %} no-underline transition-colors duration-500{% endif %}"
                    >
                        {{- node.title -}}
                    </a>
                </li>
                {% endfor %}
                {% if globals.blockButton %}
                    <li class="list-none">
                        {% include "_components/blocks/button" with {
                            link: globals.blockButton,
                            classes: 'ml-4 btn--colored'
                        } %}
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
